{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "src/",
        "lib": ["es6", "dom"],
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strict": true,
        "types": [
            "node",
            "jest",
            "vitest/globals"
        ]
    }
}
